{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2019",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./built",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noErrorTruncation": true
  },
  "exclude": ["packages/use-templates/vue"]
}
